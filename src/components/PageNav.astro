---
interface Props {
  active: string;
}

const { active } = Astro.props;

const items = [
  { key: 'now', label: 'Now', href: '/now' },
  { key: 'services', label: 'Services', href: '/services' },
  { key: 'stack', label: 'Stack', href: '/stack' },
  { key: 'uses', label: 'Uses', href: '/uses' },
  { key: 'work', label: 'Work', href: '/work' },
] as const;
---

<nav class="inline-flex bg-white/5 rounded-full p-1 mb-12">
  {items.map((item) =>
    item.key === active ? (
      <span class="px-4 pt-2 pb-1 rounded-full text-sm bg-white text-black font-medium">
        {item.label}
      </span>
    ) : (
      <a
        href={item.href}
        class="px-4 pt-2 pb-1 rounded-full text-sm text-white/60 hover:text-white/80 transition-colors"
      >
        {item.label}
      </a>
    )
  )}
</nav>
