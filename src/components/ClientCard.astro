---
interface Props {
  name: string;
  description: string;
  logoSrc: string;
  logoAlt?: string;
}

const { name, description, logoSrc, logoAlt = name } = Astro.props;
---

<div class="shrink-0 w-[370px] h-[340px] bg-white/5 rounded flex flex-col items-center pt-24 pb-12 px-8 snap-center snap-always md:w-72 md:h-64 md:pt-16 md:pb-8">
  <img
    src={logoSrc}
    alt={logoAlt}
    class="h-20 w-auto object-contain"
    loading="lazy"
  />
  <p class="mt-auto text-sm text-white/70 text-center max-w-[270px] tracking-[-0.14px]">
    {description}
  </p>
</div>
