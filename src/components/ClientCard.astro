---
interface Props {
  name: string;
  description: string;
  logoSrc: string;
  logoHeight?: number;
}

const { name, description, logoSrc, logoHeight = 80 } = Astro.props;
---

<div class="client-card shrink-0 w-[370px] h-[340px] rounded shadow-[0_12px_24px_rgba(0,0,0,0.16),0_4px_4px_rgba(0,0,0,0.1)] flex flex-col items-center justify-center px-8 snap-center snap-always gap-4 bg-white/5 backdrop-blur">
  <div class="h-[180px] flex items-center justify-center">
    <img
      src={logoSrc}
      alt={name}
      style={`height: ${logoHeight}px`}
      class="w-auto max-w-[280px] object-contain"
      loading="lazy"
    />
  </div>
  <p class="text-sm text-white/70 text-center max-w-[270px] tracking-[-0.14px]">
    {description}
  </p>
</div>
