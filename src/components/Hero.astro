---
interface Props {
  title?: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<!-- Mobile layout -->
<section class="px-4 pt-20 pb-8 md:hidden">
  <h1 class="text-lg text-white leading-normal tracking-[-0.36px] max-w-sm">
    {title}
  </h1>
  <h2 class="mt-4 text-sm text-white/60 leading-normal tracking-[-0.28px] max-w-sm">
    {subtitle}
  </h2>
</section>

<!-- Desktop layout: centered text block -->
<section class="hidden md:block pt-[205px] pb-12">
  <div class="max-w-[590px] mx-auto">
    <h1 class="text-[18px] text-white leading-normal tracking-[-0.18px]">
      {title}
    </h1>
    <h2 class="mt-4 text-[14px] text-white/60 leading-normal tracking-[-0.14px]">
      {subtitle}
    </h2>
  </div>
</section>
