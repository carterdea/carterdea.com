---
import AnimationToggle from '../components/AnimationToggle.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';
import { MorphingOrbSVG } from '../components/MorphingOrbSVG';
---

<Layout title="Animation â€” Carterdea">
  <div class="min-h-screen flex flex-col">
    <Header actionHref="/" actionLabel="Back" />

    <main transition:name="page-content" class="flex-1 flex flex-col px-4 md:px-8 py-12">
      <div class="max-w-6xl mx-auto w-full">
        <h1 class="text-3xl md:text-4xl font-medium mb-4">Morphing Orb (SVG)</h1>
        <p class="text-white/60 mb-8 max-w-2xl">
          Ellipse-based particle animation with proper 3D projection.
          Dots are drawn as ellipses that squash based on surface orientation.
          Hover to speed up.
        </p>

        <AnimationToggle active="svg" />

        <!-- Large version -->
        <section class="mb-16">
          <h2 class="text-xl font-medium mb-2">Large (500px)</h2>
          <p class="text-white/50 text-sm mb-6">Full detail with ellipse distortion</p>

          <div class="flex flex-wrap gap-8">
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Monochrome</p>
              <MorphingOrbSVG
                client:load
                size={500}
                variant="mono"
                color="#ffffff"
              />
            </div>
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Color</p>
              <MorphingOrbSVG
                client:load
                size={500}
                variant="color"
                palette={['#ff6b6b', '#4ecdc4', '#45b7d1', '#96ceb4', '#ffeaa7']}
              />
            </div>
          </div>
        </section>

        <!-- Medium version -->
        <section class="mb-16">
          <h2 class="text-xl font-medium mb-2">Medium (200px)</h2>

          <div class="flex flex-wrap gap-8 items-start">
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Monochrome</p>
              <MorphingOrbSVG
                client:load
                size={200}
                variant="mono"
                color="#ffffff"
              />
            </div>
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Color</p>
              <MorphingOrbSVG
                client:load
                size={200}
                variant="color"
                palette={['#a855f7', '#ec4899', '#f43f5e']}
              />
            </div>
          </div>
        </section>

        <!-- Small version -->
        <section class="mb-16">
          <h2 class="text-xl font-medium mb-2">Small (64px)</h2>

          <div class="flex flex-wrap gap-8 items-start">
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Monochrome</p>
              <MorphingOrbSVG
                client:load
                size={64}
                variant="mono"
                color="#ffffff"
              />
            </div>
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Color</p>
              <MorphingOrbSVG
                client:load
                size={64}
                variant="color"
              />
            </div>
          </div>
        </section>

        <!-- Tiny version -->
        <section class="mb-16">
          <h2 class="text-xl font-medium mb-2">Tiny (24px)</h2>

          <div class="flex flex-wrap gap-8 items-center">
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Monochrome</p>
              <MorphingOrbSVG
                client:load
                size={24}
                variant="mono"
                color="#ffffff"
              />
            </div>
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Color</p>
              <MorphingOrbSVG
                client:load
                size={24}
                variant="color"
              />
            </div>
            <div class="ml-8 flex items-center gap-3 text-white/60">
              <MorphingOrbSVG
                client:load
                size={24}
                variant="mono"
                color="#ffffff"
              />
              <span>Example inline usage</span>
            </div>
          </div>
        </section>

        <!-- Color Modes -->
        <section class="mb-16">
          <h2 class="text-xl font-medium mb-2">Color Modes</h2>
          <p class="text-white/50 text-sm mb-6">Different strategies for assigning colors to dots</p>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Sequential</p>
              <p class="text-white/30 text-xs mb-4">Colors follow dot creation order (smooth gradients along shape structure)</p>
              <MorphingOrbSVG
                client:load
                size={250}
                variant="color"
                colorMode="sequential"
              />
            </div>
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Spatial</p>
              <p class="text-white/30 text-xs mb-4">Colors based on 3D position (hue follows angle around Y-axis)</p>
              <MorphingOrbSVG
                client:load
                size={250}
                variant="color"
                colorMode="spatial"
              />
            </div>
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Shuffled</p>
              <p class="text-white/30 text-xs mb-4">Palette shuffled for more contrast between neighbors</p>
              <MorphingOrbSVG
                client:load
                size={250}
                variant="color"
                colorMode="shuffled"
              />
            </div>
          </div>
        </section>

        <!-- Individual shapes -->
        <section class="mb-16">
          <h2 class="text-xl font-medium mb-2">Individual Shapes</h2>
          <p class="text-white/50 text-sm mb-6">Each shape isolated (no auto-morph)</p>

          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Grid Sphere</p>
              <MorphingOrbSVG
                client:load
                size={150}
                variant="mono"
                color="#ffffff"
                shapeSequence={['gridSphere']}
                autoMorph={false}
              />
            </div>
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Curved Arcs</p>
              <MorphingOrbSVG
                client:load
                size={150}
                variant="mono"
                color="#ffffff"
                shapeSequence={['curvedArcs']}
                autoMorph={false}
              />
            </div>
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Fibonacci Sphere</p>
              <MorphingOrbSVG
                client:load
                size={150}
                variant="mono"
                color="#ffffff"
                shapeSequence={['fibSphere']}
                autoMorph={false}
              />
            </div>
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Double Orbit</p>
              <MorphingOrbSVG
                client:load
                size={150}
                variant="mono"
                color="#ffffff"
                shapeSequence={['doubleOrbit']}
                autoMorph={false}
              />
            </div>
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Single Orbit</p>
              <MorphingOrbSVG
                client:load
                size={150}
                variant="mono"
                color="#ffffff"
                shapeSequence={['orbit']}
                autoMorph={false}
              />
            </div>
            <div>
              <p class="text-white/40 text-xs mb-3 uppercase tracking-wider">Offset Sphere</p>
              <MorphingOrbSVG
                client:load
                size={150}
                variant="mono"
                color="#ffffff"
                shapeSequence={['offsetSphere']}
                autoMorph={false}
              />
            </div>
          </div>
        </section>

      </div>
    </main>

    <Footer />
  </div>
</Layout>
