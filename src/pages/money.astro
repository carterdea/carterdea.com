---
import Layout from '../layouts/Layout.astro';
import MoneyFall from '../components/MoneyFall/MoneyFall';
import StonksChartWithPrice from '../components/StonksChart/StonksChartWithPrice';
---

<Layout title="Money Fall â€” Carterdea">
  <!-- Back layer: smaller bills, further from camera -->
  <MoneyFall client:load zIndex={1} layer="back" />

  <div class="chart-container">
    <StonksChartWithPrice client:load />
  </div>

  <!-- Front layer: larger bills only, closer to camera -->
  <MoneyFall client:load zIndex={20} layer="front" />
</Layout>

<style is:global>
  body {
    margin: 0;
    padding: 0;
    overflow: hidden;
    background: #0a0a0a;
  }

  .chart-container {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90vw;
    max-width: 1000px;
    height: 40vh;
    max-height: 400px;
    z-index: 10;
  }
</style>
