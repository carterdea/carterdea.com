---
import Layout from '../layouts/Layout.astro';
import ComputerSwitcher from '../components/ComputerSwitcher/ComputerSwitcher';
---

<Layout title="Preview Mode â€” Carterdea">
  <ComputerSwitcher client:load screenshotSrc="/previews/stussy-screenshot.png" />
</Layout>

<style is:global>
  body {
    margin: 0;
    padding: 0;
    background: #0a0a0a;
  }

  .preview-container {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    height: 100vh;
    padding: 40px;
    overflow: hidden;
  }

  .switcher-button {
    position: fixed;
    top: 24px;
    right: 24px;
    z-index: 100;
    display: inline-flex;
    align-items: center;
    cursor: pointer;
    background: rgba(255, 255, 255, 0.1);
    border: 0.5px solid rgba(255, 255, 255, 0.05);
    border-radius: 3px;
    padding: 8px 12px 4px;
    font-size: 12px;
    color: white;
    letter-spacing: -0.24px;
    font-family: inherit;
    transition: all 150ms;
  }

  .switcher-button:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .switcher-button:active {
    transform: scale(0.97);
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.7);
  }
</style>
