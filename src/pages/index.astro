---
import { getEntry } from 'astro:content';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import LogoMarquee from '../components/LogoMarquee.astro';
import InfoSections from '../components/InfoSections.astro';
import Layout from '../layouts/Layout.astro';

const siteData = await getEntry('site', 'config');
const { hero, clients, technologies, services, results, testimonials, cta } = siteData?.data ?? {};
---

<Layout title="Carterdea â€” Product Design, AI & Development Agency">
  <div class="min-h-screen flex flex-col">
    <Header />

    <main transition:name="page-content" class="flex-1 flex flex-col min-h-0 md:px-10">
      <Hero title={hero?.title} subtitle={hero?.subtitle} />
      <LogoMarquee clients={clients} />
      <InfoSections
        technologies={technologies}
        services={services}
        results={results}
        testimonials={testimonials}
        cta={cta}
      />
    </main>

    <Footer />
  </div>
</Layout>
