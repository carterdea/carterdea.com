  <div class="h-screen flex flex-col overflow-hidden">
    <Header />

    <main transition:name="page-content" class="flex-1 flex flex-col min-h-0 md:px-10">
      <Hero title={hero?.title} subtitle={hero?.subtitle} />
      <LogoMarquee clients={clients} />
    </main>

    <Footer />
  </div>
</Layout>
